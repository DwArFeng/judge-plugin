<assembly xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>release</id>

    <formats>
        <format>tar.gz</format>
        <format>dir</format>
    </formats>

    <dependencySets>
        <dependencySet>
            <outputDirectory>libext</outputDirectory>
            <fileMode>0755</fileMode>
            <includes>
                <include>com.dwarfeng:fdr*</include>
            </includes>
        </dependencySet>
    </dependencySets>

    <fileSets>
        <fileSet>
            <outputDirectory>optext</outputDirectory>
            <directory>src/main/resources/optext</directory>
            <includes>
                <include>*.xml</include>
            </includes>
            <fileMode>0644</fileMode>
        </fileSet>
        <fileSet>
            <outputDirectory>conf/judge</outputDirectory>
            <directory>src/main/resources/judge</directory>
            <includes>
                <include>*.properties</include>
            </includes>
            <fileMode>0644</fileMode>
        </fileSet>
    </fileSets>

    <files>
        <file>
            <outputDirectory>./</outputDirectory>
            <source>../README.md</source>
            <fileMode>0644</fileMode>
        </file>
        <file>
            <outputDirectory>./</outputDirectory>
            <source>../CHANGELOG.md</source>
            <fileMode>0644</fileMode>
        </file>
        <file>
            <outputDirectory>./</outputDirectory>
            <source>../LICENSE</source>
            <fileMode>0644</fileMode>
        </file>
        <file>
            <outputDirectory>libext</outputDirectory>
            <source>${project.build.directory}/${project.build.finalJarName}.jar</source>
            <fileMode>0755</fileMode>
        </file>
    </files>
</assembly>